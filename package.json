{
  "name": "clerica",
  "version": "1.0.0",
  "description": "Electron application",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "build": "tsc",
    "watch": "tsc --watch",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "desktop",
    "application",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.0.0",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.17",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.clerica.app",
    "productName": "Clerica",
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
